@model Contoso.Apps.Movies.Web.Models.HomeModel
@{
    ViewBag.Title = "Home Page";
}

@section HeaderOverlay {
    
}

    <section class="store">

        <div class="container">
            <div class="row">
                <div class="wrapper clearfix">
                    <aside class="content contact-wrap">
                        <div class="store-details-wrap clearfix">
                            <div class="shop-related clearfix">

                                @if (this.Session["User"] != null)
                                {
                                    var user = (Contoso.Apps.Movies.Data.Models.User)this.Session["User"];

                                    <h2>Based on what you and others have bought (Assoc)</h2>
                                }
                                else
                                {
                                    <h2>Based on what others have bought (Assoc)</h2>
                                }

                                <p><br /></p>

                                @foreach (var product in Model.RecommendProductsBought)
                                {
                                    @Html.Partial("_MoviesTeaser", product)
                                }

                            </div>
                        </div>
                    </aside>
                </div>
            </div>
        </div>

        @if (this.Session["User"] != null)
        {
            <div class="container">
                <div class="row">
                    <div class="wrapper clearfix">
                        <aside class="content contact-wrap">
                            <div class="store-details-wrap clearfix">
                                <div class="shop-related clearfix">
                                    <h2>Based on what you and others have liked (Collab)</h2>
                                    <p><br /></p>

                                    @foreach (var product in Model.RecommendProductsLiked)
                                    {
                                        @Html.Partial("_MoviesTeaser", product)
                                    }

                                </div>
                            </div>
                        </aside>
                    </div>
                </div>
            </div>
        }
        
    </section>

@section Scripts {

}
